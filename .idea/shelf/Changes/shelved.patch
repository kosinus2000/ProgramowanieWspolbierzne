+package BMI;
+
+public class BMI {
+
+    private double waga;
+    private double wzrost;
+    private double BMI;
+
+    BMI(double waga, double wzrost) {
+        this.waga = waga;
+        this.wzrost = wzrost;
+    }
+
+    public void obliczBMI() {
+        double obliczone = (getWaga() / Math.pow(getWzrost(), 2));
+        this.BMI = obliczone;
+        String sformatowanaLiczba = String.format("%.2f", this.BMI);
+        System.out.println("BMI wynosi: " + sformatowanaLiczba);
+    }
+
+
+    public double getWaga() {
+        return waga;
+    }
+
+    public double getBMI() {
+        return BMI;
+    }
+
+    public double getWzrost() {
+        return wzrost;
+    }
+
+    public void sprawdzBMI() {
+        double BMI = getBMI();
+        if (BMI < 18.5) {
+            System.out.println("Niedowaga");
+        } else if (BMI >= 18.5 && BMI < 25) {
+            System.out.println("Prawidłowa waga");
+        } else if (BMI >= 25 && BMI < 30) {
+            System.out.println("Nadwaga");
+        } else {
+            System.out.println("Otyłość");
+        }
+    }
+}
